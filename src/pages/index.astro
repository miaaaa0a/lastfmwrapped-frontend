---
import '../styles/fonts.css';
import '../styles/global.css';
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Primary Meta Tags -->
    <title>last.fm Wrapped</title>
    <meta name="title" content="last.fm Wrapped" />
    <meta name="description" content="See what kind of music you've scrobbled over the whole year with last.fm!" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://metatags.io/" />
    <meta property="og:title" content="last.fm Wrapped" />
    <meta property="og:description" content="See what kind of music you've scrobbled over the whole year with last.fm!" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://metatags.io/" />
    <meta property="twitter:title" content="last.fm Wrapped" />
    <meta property="twitter:description" content="See what kind of music you've scrobbled over the whole year with last.fm!" />

    <!-- Meta Tags Generated with https://metatags.io -->
</head>
<body>
    <div class="progress-container">
        <div class="progress-bar"></div>
    </div>
    <div class="loading-screen">
        <div class="dimmer">
            <div class="spinner">
                <i class="fas fa-circle-notch"></i>
            </div>
        </div>
    </div>

    <button id="mode-toggle" class="mode-toggle" aria-label="Toggle dark/light mode">
        <i class="fas fa-moon"></i>
    </button>

    <div class="container">
        <h1>Your last.fm Wrapped</h1>
        
        <div class="input-section">
            <input type="text" id="username-input" placeholder="Enter last.fm Username">
            <button id="fetch-stats">Get My Stats</button>
        </div>

        <div id="stats-container" class="stats-hidden">
            <div class="stat-card" id="minutes-listened">
                <h2>Total Minutes Listened</h2>
                <img src="" alt="Minutes Listened Visualization">
            </div>

            <div class="stat-card" id="top-song">
                <h2>Top Song of the Year</h2>
                <img src="" alt="Top Song Visualization">
            </div>

            <div class="stat-card" id="top-5-songs">
                <h2>Top 5 Songs of the Year</h2>
                <img src="" alt="Top 5 Songs Visualization">
            </div>

            <div class="stat-card" id="genre-evolution">
                <h2>Genre Evolution</h2>
                <div class="genreimgs">
                    <img src="" alt="Genre Evolution 1">
                    <img src="" alt="Genre Evolution 2">
                    <img src="" alt="Genre Evolution 3">
                </div>
            </div>

            <div class="stat-card" id="finalimage">
                <h2>Finale</h2>
                <img src="" alt="Total">
            </div>
        </div>
    </div>

    <div class="footer">
        <p class="footertext">Website by <a href="https://github.com/miaaaa0a">miaaaa0a</a></p>
        <p class="footertext">Domain provided by <a href="https://github.com/sudocode1">sudocode1</a></p>
    </div>

    <script src="../scripts/stats-fetcher.js"></script>
</body>
</html>